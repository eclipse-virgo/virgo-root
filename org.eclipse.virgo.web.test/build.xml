<?xml version="1.0" encoding="UTF-8"?>
<project name="org.eclipse.virgo.web.test" xmlns:ivy="antlib:org.apache.ivy.ant">

	<property file="${basedir}/../build.properties"/>
	<property file="${basedir}/../build.versions"/>
	<import file="${basedir}/../virgo-build/standard/default.xml"/>
	
	<target name="resolve.test" depends="common-common.resolve.test">
		<property name="test.apps.dir" value="${basedir}/target/test-apps"/>
		<delete dir="${test.apps.dir}" />
		<mkdir dir="${test.apps.dir}" />
        <get src="http://repository.springsource.com.s3.amazonaws.com/ivy/bundles/release/org.springframework.webflow.samples/swf-booking-faces/${org.springframework.webflow}/swf-booking-faces-${org.springframework.webflow}.war" dest="${test.apps.dir}/swf-booking-faces-${org.springframework.webflow}.war" verbose="true" usetimestamp="true"/>
        <get src="http://repository.springsource.com.s3.amazonaws.com/ivy/bundles/release/org.springframework.webflow.samples/swf-booking-mvc/${org.springframework.webflow}/swf-booking-mvc-${org.springframework.webflow}.war" dest="${test.apps.dir}/swf-booking-mvc-${org.springframework.webflow}.war" verbose="true" usetimestamp="true"/>
		
		<ivy:resolve file="${basedir}/ivy.xml" conf="download"/>
	</target>
	
	
