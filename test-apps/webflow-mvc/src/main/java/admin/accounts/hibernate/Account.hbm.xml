<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" auto-import="false">
	<class name="admin.accounts.Account" table="T_ACCOUNT">
		<id name="entityId" column="ID" />
		<property name="number" column="NUMBER" />
		<property name="name" column="NAME" />
        <property name="creditCardNumber" column="CREDIT_CARD"/>
		<set name="beneficiaries" cascade="all" order-by="name">
			<key column="ACCOUNT_ID" />
			<one-to-many class="admin.accounts.Beneficiary" />
		</set>
		<join table="T_ACCOUNT_PROFILE">
			<key column="ACCOUNT_ID"/>
			<property name="dateOfBirth" column="DATE_OF_BIRTH" type="common.datetime.SimpleDateUserType"/>
			<property name="email" column="EMAIL"/>
			<property name="receiveNewsletter" column="REWARDS_NEWSLETTER" type="yes_no"/>
			<property name="receiveMonthlyEmailUpdate" column="MONTHLY_EMAIL_UPDATE" type="yes_no"/>
		</join>
	</class>
</hibernate-mapping>