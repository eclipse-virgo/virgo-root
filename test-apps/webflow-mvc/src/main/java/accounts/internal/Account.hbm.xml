<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="accounts" default-access="field" default-lazy="false">
    <class name="Account" table="T_ACCOUNT">
        <id name="entityId" column="ID"/>
        <property name="number" column="NUMBER"/>
        <property name="name" column="NAME"/>
        <property name="creditCardNumber" column="CREDIT_CARD"/>
        <set name="beneficiaries" lazy="false" cascade="all" sort="accounts.BeneficiaryComparator">
			<key column="ACCOUNT_ID"/>
			<one-to-many class="Beneficiary"/>
        </set>
    </class>
</hibernate-mapping>