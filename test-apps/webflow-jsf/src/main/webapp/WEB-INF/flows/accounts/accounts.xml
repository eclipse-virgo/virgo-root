<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/webflow 
		http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<var name="accountSearchCriteria" class="accounts.AccountSearchCriteria"/>
	
	<view-state id="index">
		<on-entry>
			<set name="accountSearchCriteria.accountString" 
				value="requestParameters.account != null ? requestParameters.account : 1"></set>
		</on-entry>
		<on-render>
			<evaluate result="viewScope.accounts"
				expression="accountRepository.searchByAccountNumber(accountSearchCriteria)" 
				result-type="dataModel"/>
		</on-render>
	</view-state>

</flow>
