<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<import resource="classpath:application-config.xml"/>
	<import resource="classpath:monitor/aspects-config.xml"/>

	<bean id="messageSource" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>classpath:messages/global</value>
				<value>classpath:messages/validation</value>
			</list>
		 </property>
	</bean>
	
	<!-- Drives transactions in a local Hibernate environment -->
	<bean id="transactionManager" class="org.springframework.orm.hibernate3.HibernateTransactionManager">
		<property name="sessionFactory" ref="sessionFactory" />
	</bean>
	
	<!-- Creates Hibernate Sessions to map Account and Restaurant objects -->
	<bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="mappingLocations">
			<list>
				<value>classpath:accounts/internal/Account.hbm.xml</value>
				<value>classpath:accounts/internal/Beneficiary.hbm.xml</value>
				<value>classpath:restaurants/internal/Restaurant.hbm.xml</value>
			</list>
		</property>
	</bean>

	<!-- Creates an in-memory "rewards" database populated with test data for fast testing -->
	<bean id="dataSource" class="testdb.TestDataSourceFactory">
		<property name="testDatabaseName" value="rewards"/>
		<property name="schemaLocation" value="classpath:testdb/schema.sql"/>
		<property name="testDataLocation" value="classpath:testdb/test-data.sql"/>
	</bean>
				
</beans>