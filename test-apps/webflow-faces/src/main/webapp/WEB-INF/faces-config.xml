<?xml version="1.0"?>
<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.0//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_0.dtd">

<faces-config>
	<application>
		<!-- Enables Facelets -->
		<view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
	</application>
	
	<converter>
		<converter-for-class>common.datetime.SimpleDate</converter-for-class>
		<converter-class>admin.TypeConversionService$StringToSimpleDate</converter-class>
	</converter>

	<converter>
		<converter-for-class>common.money.MonetaryAmount</converter-for-class>
		<converter-class>admin.TypeConversionService$StringToMonetaryAmount</converter-class>
	</converter>

	<converter>
		<converter-for-class>common.money.Percentage</converter-for-class>
		<converter-class>admin.TypeConversionService$StringToPercentage</converter-class>
	</converter>

</faces-config>