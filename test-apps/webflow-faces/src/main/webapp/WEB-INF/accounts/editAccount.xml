<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<persistence-context />
	
	<input name="account" value="flowScope.account" />

	<view-state id="newUpdate" model="account">
		<transition on="update" to="updated">
			<evaluate expression="persistenceContext.merge(account)" />
		</transition>
		<transition on="cancel" to="cancel" bind="false" />
	</view-state>
	
	<end-state id="updated" commit="true">
		<output name="account" value="flowScope.account" />
	</end-state>
	
	<end-state id="cancel" commit="false" />

</flow>