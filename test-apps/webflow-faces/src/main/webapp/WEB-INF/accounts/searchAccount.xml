<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
	
	<var name="searchCriteria" class="admin.accounts.AccountSearchCriteria"/>
	
	<view-state id="newSearch" model="searchCriteria">
		<transition on="search" to="searchResults">
			<evaluate expression="searchCriteria.resetPage()"/>
		</transition>	
	</view-state>
	
	<view-state id="searchResults">
		<on-render>
			<evaluate expression="accountManager.findAccounts(searchCriteria)" result="viewScope.accounts" result-type="dataModel" />
		</on-render>
		<transition on="previous">
			<evaluate expression="searchCriteria.previousPage()"/>
			<render fragments="accountSearchResults" />
		</transition>
		<transition on="next">
			<evaluate expression="searchCriteria.nextPage()"/>
			<render fragments="accountSearchResults" />
		</transition>
		<transition on="detail" to="accountDetails">
			<set name="flowScope.account" value="accounts.selectedRow" />
		</transition>
	</view-state>
	
	<view-state id="changeSearchCriteria" popup="true" view="newSearch.xhtml">
		<on-entry>
			<render fragments="accountSearchForm" />
		</on-entry>
		<transition on="search" to="searchResults">
			<evaluate expression="searchCriteria.resetPage()"/>
		</transition>
	</view-state>
	
	<view-state id="accountDetails">
		<transition on="edit" to="editAccount" />
		<transition on="searchResults" to="searchResults" />
	</view-state>
	
	<subflow-state id="editAccount" subflow="accounts/editAccount">
		<input name="account" value="flowScope.account" />
		<transition on="updated" to="accountDetails">
			<set name="flowScope.account" value="currentEvent.attributes.account" />
		</transition>
		<transition on="cancel" to="accountDetails" />
	</subflow-state>
	
	<global-transitions>
		<transition on="changeSearch" to="changeSearchCriteria"/>
	</global-transitions>

</flow>
