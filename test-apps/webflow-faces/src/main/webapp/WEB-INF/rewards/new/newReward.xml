<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
        
    <var name="diningForm" class="admin.rewards.newreward.DiningForm" />

	<view-state id="enterDiningInformation" model="diningForm">
		<on-render>
			<evaluate expression="diningFormDataProvider.findAllRestaurants()" result="viewScope.restaurants" />
		</on-render>
		<transition on="reward" to="reviewReward"/>
	</view-state>

	<view-state id="reviewReward">
		<on-render>
			<evaluate expression="rewardNetwork.calculateContributionFor(diningForm.createDining())" result="requestScope.accountContribution" />
			<set name="requestScope.distributions" value="accountContribution.distributionsAsList()" type="dataModel"/>
		</on-render>
		<transition on="confirm" to="rewardConfirmed">
			<evaluate expression="rewardNetwork.rewardAccountFor(diningForm.createDining())" result="flashScope.rewardConfirmation"/>
		</transition>
		<transition on="previous" to="enterDiningInformation" />
	</view-state>
	
	<end-state id="rewardConfirmed" view="externalRedirect:servletRelative:/rewards/showReward?confirmationNumber=${rewardConfirmation.confirmationNumber}" />

</flow>
