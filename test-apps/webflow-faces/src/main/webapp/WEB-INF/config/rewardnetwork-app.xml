<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:tx="http://www.springframework.org/schema/tx"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
							http://www.springframework.org/schema/tx
							http://www.springframework.org/schema/tx/spring-tx-2.5.xsd">

	<!-- Rewards Accounts for Dining at Restaurants: the application entry-point --> 
	<bean id="rewardNetwork" class="rewards.internal.RewardNetworkImpl">
		<constructor-arg ref="accountRepository"/>
		<constructor-arg ref="restaurantRepository"/>
		<constructor-arg ref="rewardRepository"/>
	</bean>

	<!-- Loads Accounts using Hibernate -->
	<bean id="accountRepository" class="accounts.internal.HibernateAccountRepository">
		<constructor-arg ref="sessionFactory"/>
	</bean>

	<!-- Loads Restaurants using Hibernate -->
	<bean id="restaurantRepository" class="restaurants.internal.HibernateRestaurantRepository">
		<constructor-arg ref="sessionFactory"/>
	</bean>

	<!-- Inserts confirmed Rewards into the DataSource using Spring JDBC -->
	<bean id="rewardRepository" class="rewards.internal.JdbcRewardRepository">
		<property name="dataSource" ref="dataSource"/>
	</bean>
	
	<!-- Applies transaction management to @Transactional beans -->
	<tx:annotation-driven/>
	
</beans>